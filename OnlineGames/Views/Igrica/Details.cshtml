        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specifikacije)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specifikacije)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cijena)
        </dd>
