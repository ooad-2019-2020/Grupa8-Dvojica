@{
    ViewData["Title"] = "Prodavnica";
}

@model IEnumerable<OnlineGames.Models.NalogIgrice>

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin-bottom: auto;
        text-align: center;
        font-family: arial;
        background-color: lightgray;
    }

    .price {
        color: grey;
        padding-top: 5px;
        font-weight: 500;
    }

    .button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    .card button:hover {
        opacity: 0.7;
    }

    * {
        box-sizing: border-box;
    }

    .kolona {
        float: left;
        width: 33.33%;
        padding: 10px;
    }

    /* Clearfix (clear floats) */
    .red::after {
        content: "";
        clear: both;
        display: table;
        max-width: 75%;
    }

    .red {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: -7.5px;
        margin-left: -7.5px;
    }

    .slika img {
        float: left;
        width: 100%;
        height: 200px;
    }

    .dropbtn {
        background-color: #4CAF50;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
    }

    .dropdown {
        position: fixed;
        display: inline-block;
        padding: 10px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }
</style>

<div class="red">

    <section class="col-lg-9">
            @foreach (var item in Model.Select(i => i.Igrica))
            {
                <div class="kolona">
                    <div class="card">
                        <div class="slika">
                            <a>
                                <img src="@(string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(item.SlikaIgrice.ImageData)))" style="object-fit:fill">
                            </a>
                        </div>
                        <h class="font-weight-bold" style="font-size:15px;">
                            @Html.DisplayFor(modelItem => item.Naziv)
                        </h>
                        <p class="price">Kupljena</p>
                        <p>@Html.DisplayFor(modelItem => item.Izdavac)</p>
                        <a class="button text-white" >
                            Skini
                        </a>
                    </div>
                </div>
            }
    </section>

    <section class="col-lg-3">
        <form class="form-inline ml-3 flex-column" style="padding:25px;">
            <div class="input-group input-group-sm" style="position:fixed;">
                <input class="form-control form-control-navbar" type="search" name="searchFilter" value="@ViewData["Pretraga"]" placeholder="Pretraga" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-navbar" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </section>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
