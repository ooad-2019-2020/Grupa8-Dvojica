@model OnlineGames.Models.KategorijaIgrica

@{
    ViewData["Title"] = "Dodaj igrici kategoriji";
}

<h1>Kreiraj</h1>

<h4>Kategorije igrice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IgricaId" class="control-label"></label>
                <select asp-for="IgricaId" class ="form-control" asp-items="ViewBag.IgricaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="KategorijaId" class="control-label"></label>
                <select asp-for="KategorijaId" class ="form-control" asp-items="ViewBag.KategorijaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
