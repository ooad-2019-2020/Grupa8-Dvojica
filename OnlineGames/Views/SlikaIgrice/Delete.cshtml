@model OnlineGames.Models.SlikaIgrice

@{
    ViewData["Title"] = "Delete";
}

<h1>Obriši</h1>

<h3>Da li želite da obrišete?</h3>
<div>
    <h4>Slika za igrice</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageData)
        </dt>
        <dd class = "col-sm-10">
            <img src="@(string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.ImageData))) " />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SlikaIgriceId" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Vrati se nazad</a>
    </form>
</div>
